<div class="addNewItem">
    <h3>Add Your Business to The Directory</h3>
    <form action="/" method="post" class="newItem">
        <div class="businessGeneralInfo">
            <h3>Business General Information</h3>
            <div class="businessName">
                <label for="title" class="form-label">Business Name: </label>
                <input type="text" id="title" class="businessNameInput" name="businessName">
            </div>
            <label>Business Type: (Choose One of Them) </label>
            <div class="businessType">
                <div>
                    <input type="radio" name="businessType" value="car Rental Services" id="businessType1">
                    <label for="businessType1">
                        Wedding Car Rental
                    </label>
                </div>
                <div>
                    <input type="radio" name="businessType" value="Venue Rental Services" id="businessType2">
                    <label for="businessType2">
                        Wedding Venue Rental            
                    </label>
                </div>
                <div>
                    <input type="radio" name="businessType" value="Catering Services" id="businessType3">
                    <label for="businessType3">
                        Catering Services
                    </label>
                </div>
                <div>
                    <input type="radio" name="businessType" value="Photography Services" id="businessType4">
                    <label for="businessType4">
                        Photographers
                    </label>
                </div>
                <div>
                    <input type="radio" name="businessType" value="Wedding Planner" id="businessType5">
                    <label for="businessType5">
                        Wedding Planners
                    </label>
                </div>
                <div>
                    <input type="radio" name="DJ" id="businessType6">
                    <label for="businessType6">
                        DJ
                    </label>
                </div>

            </div>
            <div class="businessPrice">
                <label for="phone">Price per day :</label>
                <input type="text" class="businessPriceInput" id="price" name="price" placeholder="0000" />
            </div>
            <div class="businessTel">
                <label for="phone">Business phone number:</label>
                <input type="tel" class="businessTelInput" id="phone" name="phone" placeholder="xxx-xxx-xxxx" />
            </div>
            <div class="businessEmail">
                <label for="email">Business Email Address:</label>
                <input type="email" id="email" name="email" placeholder="abc@mail.com" class="businessEmailInput">
            </div>
            <div class="businessServices">
                <label for="features" class="form-label">Name Three/Four Majour Services That You Deliver To Your
                    Customers</label>
                <div>
                    <textarea type="text" id="services" class="form-control" name="services"></textarea>
                </div>
            </div>
            <div class="businessDescription">
                <label for="description" class="form-label">Describe Your Business</label>
                <div>
                    <textarea type="text" id="description" class="form-control" name="description"></textarea>
                </div>
            </div>




        </div>
        <!-- social media design -->
        <div class="businessSocialMediaPages">
            <h3>Business Social Media Pages</h3>

            <div class="businessInstagramPage">
                <label for="instagram" class="form-label">Instagram Address: </label><br />
                <input type="text" id="instagram" placeholder="https://www.instagram.com/explore/tags/wedding/?hl=en"
                    class="businessNameInput" name="businessInstagramPage">
            </div>
            <div class="businessFacebookPage">
                <label for="facebook" class="form-label">Facebook Address: </label><br />
                <input type="text" id="facebook" placeholder="https://www.facebook.com/weddingideasmagazine/"
                    class="businessNameInput" name="businessFacebookPage">
            </div>
            <div class="businessYouTubePage">
                <label for="youtube" class="form-label">YouTube Address: </label><br />
                <input type="text" id="youtube" placeholder="https://www.youtube.com/watch?v=UHH_dOUUd3w"
                    class="businessNameInput" name="businessYouTubePage">
            </div>
            <div class="businessTwitterPage">
                <label for="twitter" class="form-label">Twitter Address: </label><br />
                <input type="text" id="twitter" placeholder="https://twitter.com/hertz?lang=en"
                    class="businessNameInput" name="businessTwitterPage">
            </div>
            <div class="businessTiktokPage">
                <label for="tiktok" class="form-label">Tiktok Address: </label><br />
                <input type="text" id="tiktok" placeholder="https://www.tiktok.com/@wedding_world"
                    class="businessNameInput" name="businessTiktokPage">
            </div>
        </div>
        <!-- images design -->
        <div class="businessImages">
            <h3>Business Images Pages</h3>
            <div class="mainImage">
                <label for="mainImage" class="form-label">Main Image: </label><br />
                <input type="text" id="mainImage" name="mainImage">
            </div>
            <div class="serviceImage">
                <label for="serviceImage" class="form-label">An Image That Describes Your Service: </label><br />
                <input type="text" id="serviceImage" name="serviceImage">
            </div>
            <div class="descriptionImage">
                <label for="descriptionImage" class="form-label">A Second Image That Describes Your Service:
                </label><br />
                <input type="text" id="descriptionImage" name="descriptionImage">
            </div>
        </div>

        <div class="businessContactAddress">
            <h3>Address</h3>
            <div class="streetAddress">
                <label for="streetAddress" class="form-label">Street Address: </label><br />
                <input type="text" id="streetAddress" placeholder="123 Main Ave" class="businessNameInput"
                    name="streetAddress">
            </div>
            <div class="city">
                <label for="city" class="form-label">City: </label><br />
                <input type="text" id="city" placeholder="Denver" class="businessNameInput" name="city">
            </div>
            <div class="state">
                <label for="state" class="form-label">State: </label><br />
                <input type="text" id="state" placeholder="Colorado" class="businessNameInput" name="state">
            </div>
            <div class="country">
                <label for="country" class="form-label">Country: </label><br />
                <input type="text" id="country" placeholder="USA" class="businessNameInput" name="country">
            </div>
            <div class="zipcode">
                <label for="zipcode" class="form-label">Zip code : </label><br />
                <input type="text" id="zipcode" placeholder="70245" class="businessNameInput" name="zipcode">
            </div>
        </div>
        <div class="submitForm">
                <button class="submitFormBtn">Submit</button>
        </div>

    </form>
</div>
